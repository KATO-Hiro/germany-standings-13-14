.c-tournament-app {
  margin-top: 40px;
  width: auto;

  .tournament-table {
    width: auto;

    th {
      width: 35px;
      text-align: center;

      &.team-name {
        width: 140px;
      }

      &.goal-stats {
        width: 50px;
      }
    }

    .tournament-table-body {
      position: relative;

      .tournament-table-row {
        position: absolute;
        left: 15px;
        top: 0;
        transition: all 0.6s;
        cursor: pointer;
        transform: translateX(0);

        &.selected {
          background-color: #999999;
        }

        &:hover {
          background-color: #485563;
        }

        td {
          width: 35px;
          background-color: transparent;
          transition: background-color 0.3s;
          text-align: center;

          &.team-name {
            width: 140px;
            text-align: left;
            text-transform: uppercase;
          }

          &.goal-stats {
            width: 50px;
          }

          &.addition-cell {
            width: 0;
            text-transform: uppercase;
            padding: 0;
            text-align: left;

            &.score {
              width: 15px;
            }

            &.visible {
              width: 240px;
              padding: 6px;

              &.score {
                width: 15px;
                border-left: 2px solid white;
                border-right: 2px solid white;
              }
            }

            &.win {
              background-color: rgba(204, 255, 102, 0.3);
            }

            &.draw {
              background-color: rgba(153, 153, 204, 0.3);
            }

            &.lose {
              background-color: rgba(204, 0, 0, 0.3);
            }
          }
        }
      }
    }
  }

  .slider-container {
    width: 475px;
    padding-bottom: 30px;

    .rc-slider-mark-text-active {
      color: white;
    }
  }
}